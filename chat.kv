# Filename: chat.kv

<ConnectPage>:
    Label:
        text: 'Chat Room'
        font_size: 75
        pos_hint: {'center_x': .5, 'y': 0.375}
        orientation: 'vertical'

    BoxLayout:
        size_hint: .5,.5
        pos_hint: {'center_x': .5, 'center_y': .5}
        orientation: 'vertical'
        Label:
            text: 'Username'
            font_size: 45
        TextInput:
            multiline:False
            font_size: 30
            size_hint_y: .5
        Label:
            text: 'IP:Port'
            font_size: 45
        TextInput:
            multiline:False
            font_size: 30
            size_hint_y: .5

    Button:
        text: "Join"
        font_size: 50
        background_color: rgba("#86C232")
        on_press: print("button pressed")
        size_hint: .21 , .1
        pos_hint: {'center_x': .5, 'center_y': 0.1}
        orientation: 'vertical'
        on_text:
            if len(self.text.strip()) >= 20: self.readonly = True

<Home>:
    id: main_win
    orientation: "vertical"
    spacing: 10
    space_x: self.size[0]/3
  

    canvas.before:
        Color:
            rgba: 71,75,79,1
        Rectangle:
            source:'Assets/home.png'
            size: root.width
